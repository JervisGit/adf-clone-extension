{
  "SynapseNotebook": {
    "name": "Synapse Notebook",
    "tabs": ["General", "Settings", "User Properties"],
    "commonProperties": {
      "name": { "type": "string", "label": "Name", "required": true },
      "description": { "type": "string", "label": "Description", "multiline": true },
      "state": { "type": "radio", "label": "Activity state", "options": ["Activated", "Deactivated"] },
      "timeout": { "type": "string", "label": "Timeout", "default": "0.12:00:00", "section": "policy" },
      "retry": { "type": "number", "label": "Retry", "default": 0, "section": "policy" },
      "retryIntervalInSeconds": { "type": "number", "label": "Retry interval (seconds)", "default": 30, "section": "policy" },
      "secureOutput": { "type": "boolean", "label": "Secure output", "default": false, "section": "policy" },
      "secureInput": { "type": "boolean", "label": "Secure input", "default": false, "section": "policy" }
    },
    "typeProperties": {
      "notebook": { "type": "text", "label": "Notebook", "required": true, "placeholder": "Enter notebook name" },
      "parameters": { "type": "keyvalue", "label": "Base parameters", "valueTypes": ["string", "int", "float", "bool"] },
      "sparkPool": { "type": "text", "label": "Spark pool", "placeholder": "Enter Spark pool name" },
      "executorSize": { "type": "select", "label": "Executor size", "options": ["Small", "Medium", "Large", "XLarge", "XXLarge"], "placeholder": "Select..." },
      "driverSize": { "type": "text", "label": "Driver size", "readonly": true, "placeholder": "Select..." },
      "dynamicAllocation": { "type": "radio", "label": "Dynamically allocate executors", "options": ["Enabled", "Disabled"] },
      "minExecutors": { "type": "number", "label": "Min executors", "min": 1, "conditional": { "field": "dynamicAllocation", "value": "Enabled" } },
      "maxExecutors": { "type": "number", "label": "Max executors", "min": 1, "conditional": { "field": "dynamicAllocation", "value": "Enabled" } },
      "numExecutors": { "type": "number", "label": "Number of executors", "min": 1, "conditional": { "field": "dynamicAllocation", "value": "Disabled" } }
    }
  },
  "Copy": {
    "name": "Copy Data",
    "tabs": ["General", "Source", "Sink", "Mapping", "Settings", "User Properties"],
    "commonProperties": {
      "name": { "type": "string", "label": "Name", "required": true },
      "description": { "type": "string", "label": "Description", "multiline": true },
      "state": { "type": "select", "label": "Activity state", "options": ["Active", "Inactive"], "default": "Active" },
      "onInactiveMarkAs": { "type": "select", "label": "Mark activity as", "options": ["Succeeded", "Failed", "Skipped"], "default": "Succeeded" },
      "timeout": { "type": "string", "label": "Timeout", "default": "0.12:00:00", "section": "policy" },
      "retry": { "type": "number", "label": "Retry", "default": 0, "section": "policy" },
      "retryIntervalInSeconds": { "type": "number", "label": "Retry interval (sec)", "default": 30, "section": "policy" },
      "secureOutput": { "type": "boolean", "label": "Secure output", "default": false, "section": "policy" },
      "secureInput": { "type": "boolean", "label": "Secure input", "default": false, "section": "policy" }
    },
    "sourceProperties": {
      "sourceDataset": { "type": "dataset", "label": "Source dataset", "required": true }
    },
    "sinkProperties": {
      "sinkDataset": { "type": "dataset", "label": "Sink dataset", "required": true }
    },
    "typeProperties": {
      "dataIntegrationUnits": { "type": "number", "label": "Maximum data integration unit", "default": 4, "min": 2, "max": 256 },
      "parallelCopies": { "type": "number", "label": "Degree of copy parallelism", "min": 1 },
      "enableSkipIncompatibleRow": { "type": "boolean", "label": "Fault tolerance - Skip incompatible rows", "default": false }
    }
  },
  "SparkJob": {
    "name": "Spark Job Definition",
    "tabs": ["General", "Settings", "User Properties"],
    "commonProperties": {
      "name": { "type": "string", "label": "Name", "required": true },
      "description": { "type": "string", "label": "Description", "multiline": true },
      "timeout": { "type": "string", "label": "Timeout", "default": "0.12:00:00", "section": "policy" },
      "retry": { "type": "number", "label": "Retry", "default": 0, "section": "policy" },
      "retryIntervalInSeconds": { "type": "number", "label": "Retry interval (seconds)", "default": 30, "section": "policy" }
    },
    "typeProperties": {
      "sparkJob": { "type": "text", "label": "Spark job definition", "required": true },
      "sparkPool": { "type": "text", "label": "Spark pool", "default": "defaultSparkPool", "readonly": true },
      "executorSize": { "type": "select", "label": "Executor size", "options": ["Small", "Medium", "Large"], "default": "Small" },
      "driverSize": { "type": "select", "label": "Driver size", "options": ["Small", "Medium", "Large"], "default": "Small" },
      "numExecutors": { "type": "number", "label": "Number of executors", "default": 2, "min": 1 }
    }
  }
