{
  "SynapseNotebook": {
    "name": "Synapse Notebook",
    "tabs": ["General", "Settings", "User Properties"],
    "commonProperties": {
      "name": { "type": "string", "label": "Name", "required": true },
      "description": { "type": "string", "label": "Description", "multiline": true },
      "state": { "type": "select", "label": "Activity state", "options": ["Activated", "Deactivated"], "default": "Activated" },
      "timeout": { "type": "string", "label": "Timeout", "default": "0.12:00:00", "section": "policy" },
      "retry": { "type": "number", "label": "Retry", "default": 0, "section": "policy" },
      "retryIntervalInSeconds": { "type": "number", "label": "Retry interval (seconds)", "default": 30, "section": "policy" },
      "secureOutput": { "type": "boolean", "label": "Secure output", "default": false, "section": "policy" },
      "secureInput": { "type": "boolean", "label": "Secure input", "default": false, "section": "policy" }
    },
    "typeProperties": {
      "notebook": { "type": "reference", "label": "Notebook", "required": true, "placeholder": "Select notebook" },
      "parameters": { "type": "keyvalue", "label": "Base parameters", "valueTypes": ["string", "int", "float", "bool"] },
      "snapshot": { "type": "boolean", "label": "Snapshot", "default": true },
      "sparkPool": { "type": "reference", "label": "Spark pool", "placeholder": "Select Spark pool" },
      "executorSize": { "type": "select", "label": "Executor size", "options": ["Small", "Medium", "Large", "XLarge", "XXLarge"], "default": "Small" },
      "driverSize": { "type": "select", "label": "Driver size", "options": ["Small", "Medium", "Large", "XLarge", "XXLarge"], "default": "Small" },
      "dynamicAllocation": { "type": "boolean", "label": "Dynamically allocate executors", "default": false },
      "minExecutors": { "type": "number", "label": "Min executors", "default": 1, "min": 1, "conditional": { "field": "dynamicAllocation", "value": true } },
      "maxExecutors": { "type": "number", "label": "Max executors", "default": 4, "min": 1, "conditional": { "field": "dynamicAllocation", "value": true } },
      "numExecutors": { "type": "number", "label": "Number of executors", "default": 2, "min": 1, "conditional": { "field": "dynamicAllocation", "value": false } }
    }
  },
  "Copy": {
    "name": "Copy Data",
    "tabs": ["General", "Source", "Sink", "Mapping", "Settings", "User Properties"],
    "commonProperties": {
      "name": { "type": "string", "label": "Name", "required": true },
      "description": { "type": "string", "label": "Description", "multiline": true },
      "state": { "type": "select", "label": "Activity state", "options": ["Active", "Inactive"], "default": "Active" },
      "onInactiveMarkAs": { "type": "select", "label": "Mark activity as", "options": ["Succeeded", "Failed", "Skipped"], "default": "Succeeded" },
      "timeout": { "type": "string", "label": "Timeout", "default": "0.12:00:00", "section": "policy" },
      "retry": { "type": "number", "label": "Retry", "default": 0, "section": "policy" },
      "retryIntervalInSeconds": { "type": "number", "label": "Retry interval (sec)", "default": 30, "section": "policy" },
      "secureOutput": { "type": "boolean", "label": "Secure output", "default": false, "section": "policy" },
      "secureInput": { "type": "boolean", "label": "Secure input", "default": false, "section": "policy" }
    },
    "sourceProperties": {
      "sourceDataset": { "type": "reference", "label": "Source dataset", "required": true },
      "recursive": { "type": "boolean", "label": "Recursively", "default": true },
      "modifiedDatetimeStart": { "type": "text", "label": "Start time (UTC)", "placeholder": "1/18/2026, 12:00:00 AM" },
      "modifiedDatetimeEnd": { "type": "text", "label": "End time (UTC)", "placeholder": "1/21/2026, 12:00:00 AM" },
      "wildcardFolderPath": { "type": "text", "label": "Wildcard folder path" },
      "wildcardFileName": { "type": "text", "label": "Wildcard file name" },
      "enablePartitionDiscovery": { "type": "boolean", "label": "Enable partitions discovery", "default": false }
    },
    "sinkProperties": {
      "sinkDataset": { "type": "reference", "label": "Sink dataset", "required": true },
      "writeBehavior": { "type": "radio", "label": "Write behavior", "options": ["insert", "upsert", "storedProcedure"], "default": "insert" },
      "sqlWriterUseTableLock": { "type": "boolean", "label": "Bulk insert table lock", "default": false },
      "preCopyScript": { "type": "text", "label": "Pre-copy script", "multiline": true },
      "writeBatchTimeout": { "type": "text", "label": "Write batch timeout", "default": "00:30:00" },
      "writeBatchSize": { "type": "number", "label": "Write batch size", "default": 10000 },
      "maxConcurrentConnections": { "type": "number", "label": "Max concurrent connections" },
      "disableMetricsCollection": { "type": "boolean", "label": "Disable performance metrics analytics", "default": false }
    },
    "typeProperties": {
      "dataIntegrationUnits": { "type": "number", "label": "Maximum data integration unit", "default": 4, "min": 2, "max": 256 },
      "parallelCopies": { "type": "number", "label": "Degree of copy parallelism", "min": 1 },
      "enableSkipIncompatibleRow": { "type": "boolean", "label": "Fault tolerance - Skip incompatible rows", "default": false }
    }
  },
  "SparkJob": {
    "name": "Spark Job Definition",
    "tabs": ["General", "Settings", "User Properties"],
    "commonProperties": {
      "name": { "type": "string", "label": "Name", "required": true },
      "description": { "type": "string", "label": "Description", "multiline": true },
      "timeout": { "type": "string", "label": "Timeout", "default": "0.12:00:00", "section": "policy" },
      "retry": { "type": "number", "label": "Retry", "default": 0, "section": "policy" },
      "retryIntervalInSeconds": { "type": "number", "label": "Retry interval (seconds)", "default": 30, "section": "policy" }
    },
    "typeProperties": {
      "sparkJob": { "type": "text", "label": "Spark job definition", "required": true },
      "sparkPool": { "type": "text", "label": "Spark pool", "default": "defaultSparkPool", "readonly": true },
      "executorSize": { "type": "select", "label": "Executor size", "options": ["Small", "Medium", "Large"], "default": "Small" },
      "driverSize": { "type": "select", "label": "Driver size", "options": ["Small", "Medium", "Large"], "default": "Small" },
      "numExecutors": { "type": "number", "label": "Number of executors", "default": 2, "min": 1 }
    }
  }
}
